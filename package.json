{
    "name": "local-lua-debugger-vscode-source",
    "version": "0.1.0",
    "description": "Local Lua Debugger VSCode Extension (source)",
    "scripts": {
        "build-debugger": "tstl -p debugger",
        "build-extension": "tsc -p extension",
        "build": "npm run build-debugger && npm run build-extension",
        "bundle": "npm run clean && npm run build && cp resources/* out && cd out && npm install && vsce package",
        "publish": "npm run bundle && vsce publish",
        "clean": "rm -rf out"
    },
    "repository": {
        "type": "github",
        "url": "https://github.com/tomblind/local-lua-debugger-vscode.git"
    },
    "author": "tomblind@users.noreply.github.com",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^12.0.4",
        "tslint": "^5.17.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.5.1",
        "typescript-to-lua": "^0.21.1",
        "vsce": "^1.62.0",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "vscode-debugadapter": "^1.35.0"
    }
}
