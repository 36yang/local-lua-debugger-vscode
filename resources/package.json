{
    "name": "local-lua-debugger-vscode",
    "publisher": "tomblind",
    "version": "0.1.0",
    "description": "Local Lua Debugger VSCode Extension",
    "displayName": "Local Lua Debugger",
    "icon": "Lua-Logo_128x128.png",
    "repository": {
        "type": "github",
        "url": "https://github.com/tomblind/local-lua-debugger-vscode.git"
    },
    "author": "tomblind@users.noreply.github.com",
    "license": "MIT",
    "categories": [
        "Debuggers"
    ],
    "keywords": [
        "lua",
        "luajit",
        "tstl",
        "typescripttolua",
        "typescript-to-lua",
        "love",
        "corona"
    ],
    "dependencies": {
        "vscode-debugadapter": "^1.35.0"
    },
    "main": "./extension",
    "engines": {
        "vscode": "^1.34.0"
    },
    "activationEvents": [
        "onDebug"
    ],
    "contributes": {
        "configuration":[
            {
                "title": "lua-local",
                "properties": {
                    "interpreter": {
                        "type": "string",
                        "default": "lua",
                        "description": "Lua stand-alone interpreter to use when none is specified in launch.json"
                    }
                }
            }
        ],
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "debuggers": [
            {
                "type": "lua-local",
                "label": "Local Lua Debugger",
                "program": "./debugAdapter.js",
                "runtime": "node",
                "languages": ["lua"],
                "initialConfigurations": [
                    {
                        "name": "Debug Lua Interpreter",
                        "type": "local-lua",
                        "launch": {
                            "lua": "lua",
                            "file": "${file}"
                        }
                    },
                    {
                        "name": "Debug Custom Lua Environment",
                        "type": "local-lua",
                        "launch": {
                            "executable": "myProgram",
                            "args": []
                        }
                    }
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "sourceRoot": {
                                "type": "string",
                                "description": "Root path of source mapped files"
                            },
                            "verbose": {
                                "type": "boolean",
                                "description": "Enable verbose output",
                                "default": false
                            },
                            "breakOnAttach": {
                                "type": "boolean",
                                "description": "Pause debugging as soon as debugger attaches to program",
                                "default": false
                            },
                            "launch": {
                                "oneOf": [
                                    {
                                        "type": "object",
                                        "properties": {
                                            "lua": {
                                                "type": "string",
                                                "description": "Lua stand-alone interpreter to use",
                                                "default": "lua"
                                            },
                                            "file": {
                                                "type": "string",
                                                "description": "The entry point file of the program",
                                                "default": "${file}"
                                            },
                                            "cwd": {
                                                "type": "string",
                                                "description": "Working directory to launch Lua in",
                                                "default": "${workspaceFolder}"
                                            },
                                            "env": {
                                                "type": "object",
                                                "description": "Environment variables to set",
                                                "additionalProperties": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "additionalProperties": false
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "executable": {
                                                "type": "string",
                                                "description": "The custom executable to run"
                                            },
                                            "args": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                },
                                                "description": "Arguments to pass to the executable",
                                                "default": []
                                            },
                                            "cwd": {
                                                "type": "string",
                                                "description": "Working directory to launch the executable in",
                                                "default": "${workspaceFolder}"
                                            },
                                            "env": {
                                                "type": "object",
                                                "description": "Environment variables to set",
                                                "additionalProperties": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "required": [
                                            "executable"
                                        ],
                                        "additionalProperties": false
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        ]
    }
}
